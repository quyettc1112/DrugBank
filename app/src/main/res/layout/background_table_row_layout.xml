<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/background_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/drugIn_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text="Testy"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent">


        </LinearLayout>
        <TextView
            android:id="@+id/drugIn_strength"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:gravity="center"
            android:text="20"
            android:textSize="16dp">

        </TextView>
        <LinearLayout
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent">


        </LinearLayout>

        <TextView
            android:id="@+id/drugIn_strengthNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:gravity="center"
            android:text="20"
            android:textSize="16dp">

        </TextView>
        <LinearLayout
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent">


        </LinearLayout>
        <TextView
            android:id="@+id/drugIn_strengthUnit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:gravity="center"
            android:text="20"
            android:textSize="16dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:weightSum="5"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Clinically Relevant">

        </TextView>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <TextView
            android:id="@+id/drug_clinical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text="Giảm đau, Hạ sốt, Ít tác dụng phụ, Tương tác thuốc ít, Sử dụng trong thai kỳ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp">


    </LinearLayout>



</LinearLayout>