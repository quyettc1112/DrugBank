<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/i_gray"
    android:layout_marginBottom="60dp"
   >


<LinearLayout
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Management">

    </TextView>




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:background="@drawable/backgropund_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryBackground="@android:color/transparent"
            app:queryHint="Search here ..." />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Role"
            android:id="@+id/tip_rolename"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            app:boxBackgroundColor="@color/white"
            app:startIconDrawable="@drawable/baseline_perm_contact_calendar_24"
            >

            <AutoCompleteTextView

                android:id="@+id/atc_roleListCombo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="none"
                android:padding="0dp"
                android:text="USER"
                android:textSize="13dp"
                android:textStyle="bold">

            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundColor="@color/white"
            android:hint="Gender"
            android:id="@+id/tip_gender"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:startIconDrawable="@drawable/baseline_transgender_24"
            android:layout_marginStart="10dp"

           >
            <AutoCompleteTextView
                android:id="@+id/atc_genderList"
                android:inputType="none"
                android:text="All"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="13dp"

                android:layout_width="match_parent"
                android:layout_height="40dp">

            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Sort By"
            android:id="@+id/tip_sortName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            app:boxBackgroundColor="@color/white"
            app:startIconDrawable="@drawable/baseline_sort_by_alpha_24"
            >

            <AutoCompleteTextView

                android:id="@+id/atc_sortListCombo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="none"
                android:padding="0dp"
                android:text="ID"
                android:textSize="13dp"
                android:textStyle="bold">

            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundColor="@color/white"
            android:hint="Active"
            android:id="@+id/tip_activeName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:startIconDrawable="@drawable/baseline_check_circle_outline_24"
            android:layout_marginStart="10dp"

            >

            <AutoCompleteTextView
                android:id="@+id/atc_ActiveList"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="none"
                android:padding="0dp"
                android:text="All"
                android:textSize="13dp"
                android:textStyle="bold">

            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>







    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcl_listUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/base_recycle_user">

    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>


</LinearLayout>